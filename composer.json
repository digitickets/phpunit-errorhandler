{
  "name": "rquadling/phpunit-errorhandler",
  "description": "A simple trait to add to your PHPUnit test allowing you to track and test PHP errors, warnings and notices",
  "license": "CPL-1.0",
  "authors": [
    {
      "name": "Richard Quadling",
      "email": "RQuadling@GMail.com"
    }
  ],
  "require": {
    "php": ">=5.4"
  },
  "autoload": {
    "psr-4": {
      "RQuadling\\": ".\\src\\"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "composer dump-autoload --optimize"
    ],
    "post-update-cmd": [
      "composer dump-autoload --optimize"
    ]
  },
  "require-dev": {
    "phpunit/phpunit": "^4.8"
  }
}
